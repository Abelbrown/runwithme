<div class="container padded">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= simple_form_for(@event) do |f| %>
        <%= f.error_notification %>

        <%= f.input :type_of, autofocus: true, label: "Type of event", collection: Event::MEETING, prompt: "Select an event" %>
        <%= f.input :datetime, as: :string, input_html: { class: "datetimepicker" } %>
        <%= f.input :private %>
        <%= f.input :description %>
        <%= f.input :meeting_point %>
        <%= f.input :address %>
        <%= f.input :photo, as: :attachinary  %>
        <div class="row">
          <div class="col-xs-12 col-md-6">
            <%= f.input :time_goal, label: "Time goal (minutes)", input_html: { min: '1' }, placeholder: "20 minutes" %>
          </div>
          <div class="col-xs-12 col-md-6">
            <%= f.input :trail_goal, label: "Trail goal (kms)", input_html: { min: '1' }, placeholder: "5 kms" %>
          </div>
        </div>
        <div class="text-center">
          <%= f.button :submit, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

