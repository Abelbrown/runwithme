<div class="container">
  <% if @events == [] %>
      <h1>Sorry there is no public event at the moment ! </h1>
      <h1>
        Go on poules create yours !
        <%= image_tag "chicken.png", width: 80 %>
        <%= image_tag "chicken.png", width: 80 %>
        <%= image_tag "chicken.png", width: 80 %>
        <%= image_tag "chicken.png", width: 80 %>
      </h1>

  <% else %>
    <div class="text-center padded">
      <h1>Les Events</h1>
    </div>
    <% @events.each do |event| %>
        <div class="product">
    <!--       <div class='product-upvote'>
            <div class="product-arrow"></div> 
            <div class='product-count'></div>
          </div> -->
            <% if event.photo? %>
              <%= cl_image_tag event.photo.path, width: 200, height: 120, crop: :fill, class:"product-image hidden-xs" %>
            <% else %>
              <%= image_tag "running.jpg", width: 200, height: 120, class:"product-image hidden-xs"%>
            <% end %>
            <div class='product-body'>
              <h3>
               <%= event.type_of %> -
               <% if event.time_goal %>
                 <%= event.time_goal_to_s %>
               <% end %>
               <% if event.trail_goal %>
                  <%= event.trail_goal %> km
               <% end %>
              </h3>
              <p>
              <i class="fa fa-map-marker" aria-hidden="true"></i>
              <%= event.meeting_point %></p>
              <p> Organized by <%= event.user.email %></p>
              <p> <i class="fa fa-calendar" aria-hidden="true"></i> Date: <%= event.datetime.strftime('%e %B %Y') %> Time: <%=  event.datetime.strftime('%H:%M') %></p>
            </div>
          <!-- <ul class="list-inline product-controls product-controls-hidden hidden-sm hidden-xs">
            <li><a href=""><i class="fa fa-heart"></i></a></li>
            <li><a href=""><i class="fa fa-share"></i></a></li>
            <li><a href=""><i class="fa fa-star"></i></a></li>
          </ul> -->
          <div class="btn-toolbar">
            <% @events.participations.each do |participation| %>
              <% if participation.user == current_user %>
                <p>Already joined</p>
                <%= link_to 'Update your participation', event_participations_path(event, status: "maybe"), method: :post, class: 'btn btn-success'%>
              <% else %>
              <%= link_to 'Join', event_participations_path(event, status: "going"), method: :post, class: 'btn btn-success'%>
              <%= link_to 'Maybe', event_participations_path(event, status: "maybe"), method: :post, class: 'btn btn-success'%>      
              <% end %>
            <% end %>
          </div>
          <%= link_to '', event_path(event), class: 'card-link'%>
        </div>
    <% end %>
  <% end %>
</div>


